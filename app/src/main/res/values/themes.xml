<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MilkNote" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MilkNote" parent="Base.Theme.MilkNote" />

    <style name="Theme.MilkNote.NoteName" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">#5E35B1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#03A9F4</item>
    </style>

    <style name="Theme.MilkNote.NoteEntity" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">#0717A3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#7FC5E4</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Theme.MilkNote.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>